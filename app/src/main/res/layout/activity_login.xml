<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF1F5"
    tools:ignore="MissingPrefix">

    <View
        android:id="@+id/viewTopColor"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:background="#FF9F1E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivTopPic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_login_top_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTopColor" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:text="集约派送员工端"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivTopPic" />

    <TextView
        android:id="@+id/tvTitleEnglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Mobile phone login"
        android:textColor="#80FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <View
        android:id="@+id/viewInputContainer"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleEnglish" />

    <ImageView
        android:id="@+id/ivInputBg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_login_input_bg"
        app:layout_constraintBottom_toBottomOf="@id/viewInputContainer"
        app:layout_constraintEnd_toEndOf="@id/viewInputContainer"
        app:layout_constraintStart_toStartOf="@id/viewInputContainer" />

    <EditText
        android:id="@+id/etAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@color/transparent"
        android:hint="请输入账号"
        android:inputType="number"
        android:maxLength="11"
        android:singleLine="true"
        android:textColorHint="#999999"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@id/viewInputContainer"
        app:layout_constraintStart_toStartOf="@id/viewInputContainer"
        app:layout_constraintTop_toTopOf="@id/viewInputContainer" />

    <View
        android:id="@+id/viewAccountDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#EAEAEA"
        app:layout_constraintEnd_toEndOf="@id/etAccount"
        app:layout_constraintStart_toStartOf="@id/etAccount"
        app:layout_constraintTop_toBottomOf="@id/etAccount" />

    <EditText
        android:id="@+id/etCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@color/transparent"
        android:hint="请输入验证码"
        android:maxLength="10"
        android:singleLine="true"
        android:textColorHint="#999999"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@id/viewInputContainer"
        app:layout_constraintStart_toStartOf="@id/viewInputContainer"
        app:layout_constraintTop_toBottomOf="@id/viewAccountDivider" />

    <View
        android:id="@+id/viewCodeDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#EAEAEA"
        app:layout_constraintEnd_toEndOf="@id/etCode"
        app:layout_constraintStart_toStartOf="@id/etCode"
        app:layout_constraintTop_toBottomOf="@id/etCode" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:bl_corners_radius="4dp"
        app:bl_solid_color="#DE1111"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewInputContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>